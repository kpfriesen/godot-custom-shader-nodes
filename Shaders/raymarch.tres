// Raymarch

struct ray {
    vec3 dir;
    float val;
    vec3 pos;
    float dist;
};

ray raymarch( ray r, int steps, float max_dist, float step_size, float threshold, sampler3D volume) {
    for(int i = 0; i < steps; ++i) {
        r.val = texture(volume, r.pos).x;
        r.dist += step_size;
        r.pos += r.dir * step_size;
        if(r.val >= threshold) {
